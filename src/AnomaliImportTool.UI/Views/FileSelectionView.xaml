<UserControl x:Class="AnomaliImportTool.UI.Views.FileSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnomaliImportTool.UI.Views"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <Style x:Key="FileListItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray10}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Gray8}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray9}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent2}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Select Documents to Import" 
                       FontSize="24" 
                       FontWeight="Light"/>
            <TextBlock Text="Choose PDF, Word, or Excel documents containing threat bulletins for import into Anomali ThreatStream" 
                       FontSize="14" 
                       Margin="0,8,0,0"
                       Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
        </StackPanel>

        <!-- File Drop Zone / List -->
        <Grid Grid.Row="1">
            <!-- Drop Zone (shown when no files) -->
            <Border x:Name="dropZone" 
                    BorderThickness="2" 
                    BorderBrush="{DynamicResource MahApps.Brushes.Gray6}"
                    Background="{DynamicResource MahApps.Brushes.Gray10}"
                    CornerRadius="8"
                    AllowDrop="True"
                    Drop="OnFileDrop"
                    DragEnter="OnDragEnter"
                    DragLeave="OnDragLeave"
                    Visibility="Visible">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Accent}"/>
                                <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray9}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="CloudUpload" 
                                               Width="64" 
                                               Height="64"
                                               Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Drop files here or click to browse" 
                               FontSize="16" 
                               Margin="0,16,0,8"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Supported formats: PDF, DOCX, XLSX" 
                               FontSize="12" 
                               Foreground="{DynamicResource MahApps.Brushes.Gray3}"
                               HorizontalAlignment="Center"/>
                    
                    <Button x:Name="btnBrowse" 
                            Content="Browse Files" 
                            Style="{DynamicResource MahApps.Styles.Button.Accent}"
                            Width="150"
                            Height="36"
                            Margin="0,24,0,0"
                            Click="BrowseFiles_Click"/>
                </StackPanel>
            </Border>

            <!-- File List (shown when files selected) -->
            <Grid x:Name="fileListPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource MahApps.Brushes.Gray10}"
                        Padding="12,8"
                        Margin="0,0,0,8">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Selected Files:" 
                                      VerticalAlignment="Center"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtFileCount" 
                                      Text=" (0)" 
                                      VerticalAlignment="Center"
                                      Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="btnAddMore" 
                                    ToolTip="Add more files"
                                    Style="{DynamicResource MahApps.Styles.Button.Flat}"
                                    Width="36"
                                    Height="36"
                                    Click="AddMoreFiles_Click">
                                <iconPacks:PackIconMaterial Kind="Plus" Width="18" Height="18"/>
                            </Button>
                            <Button x:Name="btnClearAll" 
                                    ToolTip="Clear all files"
                                    Style="{DynamicResource MahApps.Styles.Button.Flat}"
                                    Width="36"
                                    Height="36"
                                    Margin="4,0,0,0"
                                    Click="ClearAll_Click">
                                <iconPacks:PackIconMaterial Kind="Delete" Width="18" Height="18"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- File List -->
                <ListBox x:Name="lstFiles" 
                         Grid.Row="1"
                         ItemContainerStyle="{StaticResource FileListItem}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         SelectionMode="Extended">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <iconPacks:PackIconMaterial Grid.Column="0"
                                                           Kind="{Binding FileIcon}" 
                                                           Width="32" 
                                                           Height="32"
                                                           Margin="0,0,12,0"
                                                           VerticalAlignment="Center"
                                                           Foreground="{Binding FileIconColor}"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding FileName}" FontWeight="SemiBold"/>
                                    <TextBlock FontSize="12" Foreground="{DynamicResource MahApps.Brushes.Gray3}">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} â€¢ {1}">
                                                <Binding Path="FileSize"/>
                                                <Binding Path="FilePath"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>

                                <Button Grid.Column="2"
                                        Command="{Binding RemoveCommand}"
                                        Style="{DynamicResource MahApps.Styles.Button.Flat}"
                                        Width="32"
                                        Height="32"
                                        ToolTip="Remove file">
                                    <iconPacks:PackIconMaterial Kind="Close" Width="16" Height="16"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <CheckBox x:Name="chkGroupByName" 
                          Content="Group files by name pattern" 
                          IsChecked="True"
                          VerticalAlignment="Center"/>
                <TextBlock Text="?" 
                          Margin="8,0,0,0"
                          FontSize="12"
                          Foreground="{DynamicResource MahApps.Brushes.Accent}"
                          VerticalAlignment="Center"
                          Cursor="Help"
                          ToolTip="Files with similar names will be grouped together when processing"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancel" 
                        Content="Cancel" 
                        Width="100"
                        Height="36"
                        Margin="0,0,8,0"
                        Click="Cancel_Click"/>
                <Button x:Name="btnNext" 
                        Content="Next" 
                        Style="{DynamicResource MahApps.Styles.Button.Accent}"
                        Width="100"
                        Height="36"
                        IsEnabled="False"
                        Click="Next_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl> 