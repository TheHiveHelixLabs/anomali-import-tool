<UserControl x:Class="AnomaliImportTool.UI.Views.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnomaliImportTool.UI.Views"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Import Results" 
                       FontSize="24" 
                       FontWeight="Light"/>
            <TextBlock Text="Summary of threat bulletins imported to Anomali ThreatStream" 
                       FontSize="14" 
                       Margin="0,8,0,0"
                       Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
        </StackPanel>

        <!-- Results Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Summary Cards -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Processed -->
                    <Border Grid.Column="0" 
                            Background="{DynamicResource MahApps.Brushes.Accent}"
                            Padding="16"
                            CornerRadius="4"
                            Margin="0,0,8,0">
                        <StackPanel>
                            <iconPacks:PackIconMaterial Kind="FileDocument" 
                                                       Width="32" 
                                                       Height="32"
                                                       Foreground="White"
                                                       HorizontalAlignment="Left"/>
                            <TextBlock x:Name="txtTotalProcessed" 
                                       Text="0" 
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,8,0,4"/>
                            <TextBlock Text="Files Processed" 
                                       FontSize="14"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Successful Imports -->
                    <Border Grid.Column="1" 
                            Background="#43A047"
                            Padding="16"
                            CornerRadius="4"
                            Margin="0,0,8,0">
                        <StackPanel>
                            <iconPacks:PackIconMaterial Kind="CheckCircle" 
                                                       Width="32" 
                                                       Height="32"
                                                       Foreground="White"
                                                       HorizontalAlignment="Left"/>
                            <TextBlock x:Name="txtSuccessful" 
                                       Text="0" 
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,8,0,4"/>
                            <TextBlock Text="Successful" 
                                       FontSize="14"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Indicators Found -->
                    <Border Grid.Column="2" 
                            Background="#1976D2"
                            Padding="16"
                            CornerRadius="4"
                            Margin="0,0,8,0">
                        <StackPanel>
                            <iconPacks:PackIconMaterial Kind="ShieldSearch" 
                                                       Width="32" 
                                                       Height="32"
                                                       Foreground="White"
                                                       HorizontalAlignment="Left"/>
                            <TextBlock x:Name="txtIndicators" 
                                       Text="0" 
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,8,0,4"/>
                            <TextBlock Text="Indicators" 
                                       FontSize="14"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Failed -->
                    <Border Grid.Column="3" 
                            Background="#E53935"
                            Padding="16"
                            CornerRadius="4">
                        <StackPanel>
                            <iconPacks:PackIconMaterial Kind="AlertCircle" 
                                                       Width="32" 
                                                       Height="32"
                                                       Foreground="White"
                                                       HorizontalAlignment="Left"/>
                            <TextBlock x:Name="txtFailed" 
                                       Text="0" 
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,8,0,4"/>
                            <TextBlock Text="Failed" 
                                       FontSize="14"
                                       Foreground="White"
                                       Opacity="0.9"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Detailed Results -->
                <TextBlock Text="Detailed Results" 
                           FontWeight="SemiBold"
                           FontSize="16"
                           Margin="0,0,0,12"/>

                <DataGrid x:Name="resultsGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          BorderThickness="1"
                          BorderBrush="{DynamicResource MahApps.Brushes.Gray8}"
                          MinHeight="200"
                          MaxHeight="400">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="8,4"/>
                        </Style>
                    </DataGrid.Resources>
                    
                    <DataGrid.Columns>
                        <!-- Status Icon -->
                        <DataGridTemplateColumn Header="" Width="40" CanUserResize="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <iconPacks:PackIconMaterial Kind="{Binding StatusIcon}" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="{Binding StatusColor}"
                                                               HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- File Name -->
                        <DataGridTextColumn Header="File Name" 
                                            Binding="{Binding FileName}" 
                                            Width="2*"/>

                        <!-- Status -->
                        <DataGridTextColumn Header="Status" 
                                            Binding="{Binding Status}" 
                                            Width="*"/>

                        <!-- Indicators -->
                        <DataGridTextColumn Header="Indicators" 
                                            Binding="{Binding IndicatorCount}" 
                                            Width="80"/>

                        <!-- Import Time -->
                        <DataGridTextColumn Header="Import Time" 
                                            Binding="{Binding ImportTime}" 
                                            Width="100"/>

                        <!-- Message -->
                        <DataGridTextColumn Header="Message" 
                                            Binding="{Binding Message}" 
                                            Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Export Options -->
                <Border Background="{DynamicResource MahApps.Brushes.Gray10}"
                        Padding="16"
                        CornerRadius="4"
                        Margin="0,24,0,0">
                    <StackPanel>
                        <TextBlock Text="Export Results" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>
                        
                        <WrapPanel>
                            <Button x:Name="btnExportCsv"
                                    Click="ExportCsv_Click"
                                    Style="{DynamicResource MahApps.Styles.Button.Flat}"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="FileDelimited" 
                                                               Width="16" 
                                                               Height="16"
                                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Export to CSV"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnExportJson"
                                    Click="ExportJson_Click"
                                    Style="{DynamicResource MahApps.Styles.Button.Flat}"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="CodeJson" 
                                                               Width="16" 
                                                               Height="16"
                                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Export to JSON"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnViewLogs"
                                    Click="ViewLogs_Click"
                                    Style="{DynamicResource MahApps.Styles.Button.Flat}">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="TextBox" 
                                                               Width="16" 
                                                               Height="16"
                                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="View Logs"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnNewImport" 
                        Content="New Import" 
                        Width="120"
                        Height="36"
                        Margin="0,0,8,0"
                        Click="NewImport_Click"/>
                <Button x:Name="btnClose" 
                        Content="Close" 
                        Style="{DynamicResource MahApps.Styles.Button.Accent}"
                        Width="100"
                        Height="36"
                        Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl> 