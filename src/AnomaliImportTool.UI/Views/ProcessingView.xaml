<UserControl x:Class="AnomaliImportTool.UI.Views.ProcessingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnomaliImportTool.UI.Views"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Processing Documents" 
                       FontSize="24" 
                       FontWeight="Light"/>
            <TextBlock Text="Extracting threat indicators and preparing for import to Anomali ThreatStream" 
                       FontSize="14" 
                       Margin="0,8,0,0"
                       Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
        </StackPanel>

        <!-- Processing Content -->
        <Grid Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Overall Progress -->
                    <Border Background="{DynamicResource MahApps.Brushes.Gray10}"
                            Padding="16"
                            CornerRadius="4"
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Overall Progress" 
                                       FontWeight="SemiBold"
                                       FontSize="16"/>
                            
                            <mah:MetroProgressBar Grid.Row="1" 
                                                  x:Name="overallProgress"
                                                  Height="24"
                                                  Margin="0,12,0,8"
                                                  Minimum="0"
                                                  Maximum="100"
                                                  Value="0"/>
                            
                            <Grid Grid.Row="2">
                                <TextBlock x:Name="txtOverallStatus" 
                                           Text="Initializing..."
                                           HorizontalAlignment="Left"/>
                                <TextBlock x:Name="txtOverallPercentage" 
                                           Text="0%"
                                           HorizontalAlignment="Right"
                                           FontWeight="SemiBold"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Current File Progress -->
                    <Border Background="{DynamicResource MahApps.Brushes.Gray10}"
                            Padding="16"
                            CornerRadius="4"
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <iconPacks:PackIconMaterial x:Name="currentFileIcon"
                                                           Kind="File" 
                                                           Width="20" 
                                                           Height="20"
                                                           Margin="0,0,8,0"
                                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtCurrentFile" 
                                           Text="Waiting to start..." 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <mah:MetroProgressBar Grid.Row="1" 
                                                  x:Name="currentFileProgress"
                                                  Height="16"
                                                  Margin="0,12,0,8"
                                                  Minimum="0"
                                                  Maximum="100"
                                                  Value="0"
                                                  IsIndeterminate="False"/>
                            
                            <TextBlock Grid.Row="2" 
                                       x:Name="txtCurrentFileStatus" 
                                       Text=""
                                       FontSize="12"
                                       Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
                        </Grid>
                    </Border>

                    <!-- Processing Steps -->
                    <TextBlock Text="Processing Steps" 
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,0,0,12"/>

                    <ItemsControl x:Name="processingSteps">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource MahApps.Brushes.Gray10}"
                                        Padding="12"
                                        Margin="0,0,0,8"
                                        CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Status Icon -->
                                        <iconPacks:PackIconMaterial Grid.Column="0"
                                                                   Kind="{Binding StatusIcon}" 
                                                                   Width="24" 
                                                                   Height="24"
                                                                   Margin="0,0,12,0"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{Binding StatusColor}"/>

                                        <!-- Step Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding StepName}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Status}" 
                                                       FontSize="12"
                                                       Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
                                        </StackPanel>

                                        <!-- Duration -->
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding Duration}"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource MahApps.Brushes.Gray3}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Error Panel (Hidden by default) -->
                    <Border x:Name="errorPanel"
                            Background="#FFEBEE"
                            BorderBrush="#EF5350"
                            BorderThickness="1"
                            Padding="16"
                            CornerRadius="4"
                            Margin="0,16,0,0"
                            Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <iconPacks:PackIconMaterial Grid.Column="0"
                                                       Kind="AlertCircle" 
                                                       Width="24" 
                                                       Height="24"
                                                       Margin="0,0,12,0"
                                                       VerticalAlignment="Top"
                                                       Foreground="#C62828"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Processing Error" 
                                           FontWeight="SemiBold"
                                           Foreground="#C62828"/>
                                <TextBlock x:Name="txtErrorMessage" 
                                           Text=""
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0"
                                           Foreground="#D32F2F"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <CheckBox x:Name="chkStopOnError" 
                          Content="Stop processing on error" 
                          IsChecked="False"
                          VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancel" 
                        Content="Cancel" 
                        Width="100"
                        Height="36"
                        Margin="0,0,8,0"
                        Click="Cancel_Click"/>
                <Button x:Name="btnPause" 
                        Content="Pause" 
                        Width="100"
                        Height="36"
                        Margin="0,0,8,0"
                        Click="Pause_Click"
                        Visibility="Visible"/>
                <Button x:Name="btnContinue" 
                        Content="Continue" 
                        Style="{DynamicResource MahApps.Styles.Button.Accent}"
                        Width="100"
                        Height="36"
                        IsEnabled="False"
                        Visibility="Collapsed"
                        Click="Continue_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl> 