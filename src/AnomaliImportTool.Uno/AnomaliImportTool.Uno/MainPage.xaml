<Page x:Class="AnomaliImportTool.Uno.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:viewmodels="using:AnomaliImportTool.Uno.ViewModels"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{ThemeResource SystemAccentColor}" 
                Padding="16,12">
            <StackPanel>
                <TextBlock Text="{Binding Title}" 
                           Style="{ThemeResource TitleTextBlockStyle}"
                           Foreground="White" 
                           HorizontalAlignment="Center" />
                <TextBlock Text="{Binding PlatformInfo}" 
                           Style="{ThemeResource CaptionTextBlockStyle}"
                           Foreground="White" 
                           Opacity="0.8"
                           HorizontalAlignment="Center" 
                           Margin="0,4,0,0" />
            </StackPanel>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1"
                Padding="16">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Spacing="12">
                
                <Button Content="Select File" 
                        Command="{Binding SelectFileCommand}"
                        Style="{ThemeResource AccentButtonStyle}"
                        MinWidth="120" />
                
                <Button Content="Process Document" 
                        Command="{Binding ProcessDocumentCommand}"
                        IsEnabled="{Binding ProcessDocumentCommand.CanExecute}"
                        MinWidth="140" />
                
                <Button Content="Add Sample Data" 
                        Command="{Binding AddSampleDataCommand}"
                        MinWidth="140" />
                
                <Button Content="Clear Data" 
                        Command="{Binding ClearDataCommand}"
                        MinWidth="120" />
                
                <Button Content="Refresh" 
                        Command="{Binding RefreshCommand}"
                        MinWidth="100" />
                
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Documents Section -->
            <Border Grid.Column="0" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Documents Header -->
                    <Border Grid.Row="0" 
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            Padding="16,12"
                            CornerRadius="8,8,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📄" 
                                       FontSize="16" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="Documents" 
                                       Style="{ThemeResource SubtitleTextBlockStyle}"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Documents.Count}" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                       Opacity="0.8"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>

                    <!-- Documents List -->
                    <ScrollViewer Grid.Row="1" Padding="16">
                        <ItemsControl ItemsSource="{Binding Documents}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding FileName}" 
                                                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                       TextWrapping="Wrap" />
                                            
                                            <StackPanel Grid.Row="1" 
                                                        Orientation="Horizontal" 
                                                        Spacing="12"
                                                        Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Status}" 
                                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                                           Foreground="{ThemeResource SystemAccentColor}" />
                                                <TextBlock Style="{ThemeResource CaptionTextBlockStyle}">
                                                    <Run Text="{Binding PageCount}" />
                                                    <Run Text=" pages" />
                                                </TextBlock>
                                                <TextBlock Text="{Binding TlpDesignation}" 
                                                           Style="{ThemeResource CaptionTextBlockStyle}" />
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Row="2"
                                                       Text="{Binding Creator}" 
                                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                                       Opacity="0.7"
                                                       Margin="0,4,0,0" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Threat Bulletins Section -->
            <Border Grid.Column="2" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Bulletins Header -->
                    <Border Grid.Row="0" 
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            Padding="16,12"
                            CornerRadius="8,8,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🛡️" 
                                       FontSize="16" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="Threat Bulletins" 
                                       Style="{ThemeResource SubtitleTextBlockStyle}"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding ThreatBulletins.Count}" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                       Opacity="0.8"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>

                    <!-- Bulletins List -->
                    <ScrollViewer Grid.Row="1" Padding="16">
                        <ItemsControl ItemsSource="{Binding ThreatBulletins}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding Name}" 
                                                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                       TextWrapping="Wrap" />
                                            
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding Body}" 
                                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                                       TextWrapping="Wrap"
                                                       Margin="0,4,0,0" />
                                            
                                            <StackPanel Grid.Row="2" 
                                                        Orientation="Horizontal" 
                                                        Spacing="12"
                                                        Margin="0,8,0,0">
                                                <TextBlock Text="{Binding Status}" 
                                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                                           Foreground="{ThemeResource SystemAccentColor}" />
                                                <TextBlock Text="{Binding Tlp}" 
                                                           Style="{ThemeResource CaptionTextBlockStyle}" />
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Row="3"
                                                       Text="{Binding CreatedAt}" 
                                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                                       Opacity="0.7"
                                                       Margin="0,4,0,0" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                    <TextBlock Text="{Binding StatusMessage}" 
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               VerticalAlignment="Center" />
                    
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource SystemErrorTextColor}"
                               Visibility="{Binding HasErrors}"
                               VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <ProgressRing IsActive="{Binding IsBusy}" 
                                  Width="16" 
                                  Height="16"
                                  Visibility="{Binding IsBusy}" />
                    
                    <ProgressRing IsActive="{Binding IsProcessing}" 
                                  Width="16" 
                                  Height="16"
                                  Visibility="{Binding IsProcessing}" />
                    
                    <TextBlock Text="Cross-Platform Ready ✓" 
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource SystemAccentColor}"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
